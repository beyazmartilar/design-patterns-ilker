<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/css/*</pattern>
        <pattern>/image/*</pattern>
        <pattern>/js/*</pattern>
    </excludes>

    <decorator name="main" page="template.jsp">
        <pattern>/jsp/*</pattern>
    </decorator>

</decorators>
